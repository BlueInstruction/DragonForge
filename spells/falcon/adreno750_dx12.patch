diff --git a/src/freedreno/vulkan/tu_device.cc b/src/freedreno/vulkan/tu_device.cc
--- a/src/freedreno/vulkan/tu_device.cc
+++ b/src/freedreno/vulkan/tu_device.cc
@@ -1,3 +1,4 @@
+/* Dragon: Falcon Adreno 750 DX12 - DX12 compatibility for A750 */
 
 /* DX12 compatibility improvements for Adreno 750 */
 
@@ -100,6 +101,30 @@ tu_device_init_a7xx(struct tu_device *dev)
    /* A750 DX12 compatibility */
+   
+   if (dev->physical_device->info->chip == 7 &&
+       dev->physical_device->info->gpu_id >= 750) {
+       
+       /* Enable DX12 required features */
+       dev->features.robustBufferAccess = true;
+       dev->features.shaderInt64 = true;
+       dev->features.shaderFloat64 = true;
+       
+       /* Increase descriptor limits */
+       dev->limits.maxBoundDescriptorSets = 8;
+       dev->limits.maxPerStageDescriptorStorageBuffers = 500000;
+       dev->limits.maxPerStageDescriptorSampledImages = 500000;
+       
+       /* Enable advanced features */
+       dev->features.geometryShader = true;
+       dev->features.tessellationShader = true;
+       
+       /* DX12 barrier compatibility */
+       dev->dx12_compat.enhanced_barriers = true;
+       dev->dx12_compat.relaxed_format_casting = true;
+   }
 
 diff --git a/src/freedreno/vulkan/tu_physical_device.cc b/src/freedreno/vulkan/tu_physical_device.cc
--- a/src/freedreno/vulkan/tu_physical_device.cc
+++ b/src/freedreno/vulkan/tu_physical_device.cc
@@ -1,3 +1,4 @@
+/* Dragon: Falcon Adreno 750 DX12 - Physical device capabilities */
 
@@ -150,6 +151,18 @@ tu_physical_device_get_features(struct tu_physical_device *pdev)
    /* A750 feature reporting for DX12 */
+   
+   if (pdev->info->gpu_id >= 750) {
+       /* Report DX12 required features */
+       features->samplerAnisotropy = true;
+       features->textureCompressionBC = true;
+       features->independentBlend = true;
+       features->multiDrawIndirect = true;
+       features->drawIndirectFirstInstance = true;
+       features->depthClamp = true;
+       features->depthBiasClamp = true;
+       features->fillModeNonSolid = true;
+   }
