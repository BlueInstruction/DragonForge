+/*
+ * A6xx-specific fixes for IR3
+ * - Correct MOV handling for array registers
+ * - Prevent SSA conflicts on heavy workloads
+ */
+
+void ir3_a6xx_fix(struct ir3 *ir)
+{
+    foreach_block (block, &ir->block_list) {
+        foreach_instr (instr, &block->instr_list) {
+            if (instr->opc == OPC_MOV && (instr->dsts[0]->flags & IR3_REG_ARRAY)) {
+                instr->dsts[0]->flags |= IR3_REG_SSA;
+            }
+        }
+    }
+}
